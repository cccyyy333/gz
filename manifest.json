{
  "manifest_version": 3,
  "name": "Seeso Extension",
  "version": "1.0",
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["showGaze.js", "seeso/*", "index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
